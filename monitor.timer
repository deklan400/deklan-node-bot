[Unit]
Description=Run Deklan Node Monitor periodically
After=network-online.target
Wants=network-online.target

[Timer]
# Start 5 minutes after boot
OnBootSec=5m

# Default interval (fallback)
# Akan di-override oleh MONITOR_EVERY_MINUTES dalam .env
OnUnitActiveSec=3h

# Remember schedule across reboot
Persistent=true

Unit=monitor.service

[Install]
WantedBy=timers.target
