[Unit]
Description=Run Deklan Node Monitor periodically
After=network-online.target
Wants=network-online.target

[Timer]
# Delay after boot
OnBootSec=2m

# Main interval
# NOTE:
#   - Install/reinstall.sh akan rewrite otomatis
#   - Jika gagal load â†’ fallback 3h
OnUnitActiveSec=3h

# Avoid simultaneous execution if many nodes
RandomizedDelaySec=45

# Preserve schedule across reboots
Persistent=true

# Target unit
Unit=monitor.service

[Install]
WantedBy=timers.target
