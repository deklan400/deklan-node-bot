[Unit]
Description=Run Deklan Node Monitor periodically
After=network-online.target
Wants=network-online.target

[Timer]
# Delay after boot
OnBootSec=2m

# Default interval (runs every 3 hours)
OnUnitActiveSec=3h

# Random delay to avoid load bursts
RandomizedDelaySec=45

# Keeps timer stability across reboots
Persistent=true

# What to trigger
Unit=monitor.service

[Install]
WantedBy=timers.target
