# ===============================
# Telegram
# ===============================
BOT_TOKEN=YOUR_BOT_TOKEN

# Chat yang menerima kontrol & notifikasi (wajib 1 ID)
CHAT_ID=123456789


# ===============================
# Access Control
# ===============================
# Opsional → batasi siapa yang boleh kontrol bot
# If kosong → hanya CHAT_ID yang boleh
ALLOWED_USER_IDS=123456789,987654321


# ===============================
# Node Identity
# ===============================
# Label bebas untuk identitas VPS/Node
NODE_NAME=deklan-vps-1


# ===============================
# Service Name
# ===============================
# Nama systemd service yang dimonitor → default gensyn
SERVICE_NAME=gensyn


# ===============================
# Monitor Interval
# ===============================
# Interval jadwal monitor (menit)
# Default: 180 menit = 3 jam
MONITOR_EVERY_MINUTES=180


# ===============================
# Logs
# ===============================
# Banyak baris log yang ditampilkan
LOG_LINES=50
